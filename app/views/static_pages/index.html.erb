 <% provide(:title,'Dashboard') %>
<section class="container">
    <br>
       <div>
            <h1 class="border-bottom">Dashbord</h1>
            <div class="row">
                <div class="text-center mt-1">
                    <ul class="border rounded-lg p-4">
                         <p class="text-left"><strong>User Information</strong></p>
                        <li>
                            <%= gravatar_for current_user ,size: 60 %><strong>
                            <%= link_to current_user.name,current_user%></strong>
                        </li>
                        <li class="mt-2">
                            <%= current_user.email %>
                        </li>
                        <li class="mt-3">
                            <%= link_to "Update profile", edit_user_path(current_user), class: 'btn btn-info' %>
                        </li>
                    </ul>
                <div class="border rounded-lg p-4">
                    <p class="text-left">
                        <strong>User Stats</strong>
                    </p>
                    <div class="mt-3">
                        <%= render 'shared/stats' %>
                    </div>
                    <div class="mt-3">
                        <%= "user.Word leraned.conut" %>
                    </div>
                </div>

                <div class="border rounded-lg ml-5 p-4">
                    <p class="text-left"><strong> Activity Feeds</strong></p>
                </div>
            </div>
            <div class="border rounded-lg ml-5 p-4">
