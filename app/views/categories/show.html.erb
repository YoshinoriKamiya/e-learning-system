<% provide(:title,'Admin|Categories') %>  
<br>  
<div class="container">
    <div class="column is-5 w-100">
        <div class="card mb-4">
            <div class="card-header">
                <div class="row">
                    <div class="col-sm-6">
                        <div>Admin|Categories</div>
                    </div>
                    <div class="col-sm-6 text-right">
                        <%= link_to 'Add category', new_category_path ,class:"btn btn-success "%>
                    </div>
                </div>
            </div>    
            <table class="table">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% @categories.each do |category| %>
                        <tr>
                            <td ><%= link_to category.title, (category_words_list_url(category.id))  %></td>
                                <td><%= category.description %></td>
                                <%= link_to 'Add word', new_category_words_path(category.id), class:"btn btn-sm btn-info mr2"%>
                                <%= link_to 'Edit',"edit_words_path(category.id)", class:"btn btn-sm btn-success mr2"%>
                                <% if current_user.admin == true %>
                                    <%= link_to 'delete', category_url(category) , method: :delete, data: {confirm: "You sure?"} %>
                                <% end %>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>