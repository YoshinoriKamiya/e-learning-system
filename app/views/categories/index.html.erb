<% provide(:title,'Profile') %> 
<br> 
    <div class="container">
        <ul class="nav nav-pills nav-warning float-right justify-content-end">
            <li class="nav-item">
                <a class="nav-link active" href="/categories">All</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/categories?learned=1">Learned</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/categories?learned=0">Not learned</a>
            </li>
        </ul>
        <h1>Categories (<%= @categories.count %>)</h1>

        <div>
            <ul class=" row mt-4">
            <% @categories.each do |category|%>
                <div class="border rounded-lg m-2 w-50 col-xs-5 col-lg-5">
                    
                    <li class="flex-row">
                        
                        <h3><%= category.title %></h3>
                    </li>
                    <li>
                        <%= category.description %>
                    </li>
                    <li>
                    <% if current_user.admin == true %>   
                    <%= link_to "Edit", edit_category_url(category), class:"btn btn-large btn-success"  %>

                    <%= link_to "Delete", category_url(category), method: :delete, data: {confirm: "are you sure? "}, class:"btn btn-large btn-danger"  %>

                    <% end %>
                    <%= link_to "Learn", " " ,class: "btn btn-large btn-info w-100 h-5 mt-1" %>
                    </li>
                </div>
                <% end %>
            </ul>  
        </div>
    </div>