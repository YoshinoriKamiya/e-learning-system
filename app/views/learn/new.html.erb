
<% category_id%>
<% word_id%>
<% choices for the word%>

<div class="container">
    <div class="row">
        <div class="col-sm-8 col-center">
            <div class="row" style="margin-bottom: 20px;">
                <div class="col-sm-9">
              
                    <%= category_id %>
                </div>
                <div class="col-sm-3 text-right">
                    <h3 class="text-muted"><span class="text-warning">1</span> of 1</h3>
                </div>
            </div>

            <div class="card p-3">
                <h2 class="text-warning text-center"><%= word_id %></h2>

                <div class="choices">
                    <%= @choices.word do |choice.word| %>

                        <div class="mt-3">
                            <form class="button_to" ></form>
                        </div>
                        
                            <input type="hidden" name="answer[word_id]" value="166" /></form>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>
